---
import { Icon } from "astro-icon/components";

interface Props {
    name: string;
    logo: string;
    loved: boolean;
}

const { logo, name, loved } = Astro.props;
---

<div class={`bg-white rounded-md border-[1px] border-primary/50 ${loved ? 'border-yellow-500/50' : ''} flex items-center px-4 py-3 space-x-4`}>
    <img src={logo} alt=`Logo de ${name}` class="w-6 h-auto object-cover">
    <span class="relative top-0.5">{name}</span>
    {loved && (
        <Icon name="loved-skill" class="text-2xl" />
    )}
</div>
