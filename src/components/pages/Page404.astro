---
import MainLayout from "@layouts/MainLayout.astro"
import trans from "@trans";

const lang = Astro.locals.lang;
---

<MainLayout title={trans.common.title[lang]}>
    <div class="flex flex-col space-y-6 justify-center items-center mt-20">
        <img src="/logos/black-hole.svg" alt={trans.error.blackhole[lang]} class="w-60" />
        <h1 class="text-center text-xl">{trans.error.notfound[lang]} ! (404)</h1>
    </div>
</MainLayout>
